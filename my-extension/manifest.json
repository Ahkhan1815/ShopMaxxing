{
    "manifest_version": 3,
    "name": "Smart Product Recommender",
    "version": "1.0.0",
    "description": "Analyzes Amazon and BestBuy products to recommend the best options.",
    "action": {
      "default_popup": "popup.html",
      "default_title": "Recommend products"
    },
    "permissions": ["activeTab"],
    "host_permissions": ["http://localhost:4000/*"],
    "content_scripts": [
      {
        "matches": [
          "*://www.amazon.com/*",
          "*://www.bestbuy.com/*"
        ],
        "js": ["content.js"]
      }
    ]
  }
  
  